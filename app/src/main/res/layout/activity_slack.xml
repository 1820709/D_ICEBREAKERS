<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlackActivity">

    <LinearLayout
        android:id="@+id/laySlack"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        android:weightSum="2"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSlackShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/btnSlackShareLbl"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layScore"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/laySlack"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblScore"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="@string/scoreLbl"
            />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="20dp"
            android:layout_height="30dp"
            />

    </LinearLayout>

</RelativeLayout>